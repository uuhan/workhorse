{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zebra",
  "version": "0.1.0",
  "identifier": "io.github.uuhan",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "zebra",
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "windows": ["*"],
          "permissions": [
            "process:allow-restart",
            "log:default",
            "shell:allow-spawn",
            "shell:allow-kill",
            "shell:allow-execute",
            "shell:allow-open",
            {
              "identifier": "shell:allow-spawn",
              "allow": [
                {
                  "name": "./bin/horsed",
                  "cmd": "horsed",
                  "args": ["--help"],
                  "sidecar": true
                }
              ]
            },
            {
              "identifier": "shell:allow-execute",
              "allow": [
                {
                  "name": "./bin/horsed",
                  "cmd": "horsed",
                  "args": [],
                  "sidecar": true
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["./bin/horsed"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
